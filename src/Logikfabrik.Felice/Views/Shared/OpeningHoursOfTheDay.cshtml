<section class="opening-hours-of-the-day" data-ng-controller="openingHoursOfTheDayController" data-ng-cloak>
    <div ng-switch on="hasOpeningHours()">
        <div ng-switch-when="true">
            <h4>Öppettider idag, {{openingHours.Name}}</h4>
            <p>kl. {{openingHours.From}} - {{openingHours.To}}</p>
            <p>Välkomna</p>
        </div>
        <div ng-switch-when="false">
            <h4>Öppettider idag</h4>
            <p>Stängt</p>
            <p>Välkomna åter</p>
        </div>
    </div>
</section>