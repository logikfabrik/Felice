@model Logikfabrik.Felice.ViewModels.BasePageViewModel

@{
    Bundles.Reference("~/Assets/CommonCss");
    Bundles.Reference("~/Assets/CommonJs");
}

<!DOCTYPE html>

<html>
<head>
    @Html.HeadFor(Model)
    <title>@Model.Name - Restaurang Felicé</title>
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Droid+Serif:400,400italic">
    @Bundles.RenderStylesheets()
</head>
<body data-ng-app="Felice">
    <header>
        <input type="checkbox" id="toggle" />
        <label for="toggle" onclick="">&#9776; Meny</label>
        <nav>
            @{
                Html.RenderAction("MainMenu", "Menu");
            }
        </nav>
        <ul>
            <li><img src="~/Assets/img/app/img-1.png" alt="" /></li>
            <li><img src="~/Assets/img/app/img-2.png" alt="" /></li>
            <li><a href="/" title="Hem"><img src="~/Assets/img/img-3.png" alt="" /></a></li>
        </ul>

        <h1>Restaurang Felicé</h1>
        <blockquote>God mat, som hemma</blockquote>
    </header>

    <article>
        @RenderBody()
    </article>

    <footer>
        <ul>
            <li>Restaurang Felicé</li>
            <li><address>@Model.Address</address></li>
            <li>tfn. <a href="tel:@Model.PhoneNumber" title="tfn. @Model.PhoneNumber">@Model.PhoneNumber</a></li>
        </ul>
    </footer>

    @Bundles.RenderScripts()
</body>
</html>